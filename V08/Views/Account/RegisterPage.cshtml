
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/CSS/FormStyleSheet.css">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="~/Scripts/JavaScript/RegisterUser.js"></script>
</head>
<body>
    <div class="area">
        <form>
            <div class="image-container">
                <!--Insert Image-->
            </div>
            <h2>Registration</h2>
            <div class="input-container">
                <div class="input-field">
                    <label for="FirstName :">First name*</label>
                    <input type="text" id="FirstNameId" name="FirstName" required>
                </div>
                <div class="input-field">
                    <label for="OtherName :">Other name(s)</label>
                    <input type="text" id="OtherNameId" name="OtherName">
                </div>
                <div class="input-field">
                    <label for="LastName :">Last name*</label>
                    <input type="text" id="LastNameId" name="LastName" required>
                </div>
                <div class="input-field">
                    <label for="NationalIdentificationNumber :">National Identification Number *</label>
                    <input type="text" id="NationalIdentificationNumberId" name="NationalIdentificationNumber" required>
                </div>
                <div class="input-field">
                    <label for="MobileNumber :">Mobile number*</label>
                    <input type="number" id="MobileNumberId" name="MobileNumber" required>
                </div>
                <div class="input-field">
                    <label for="Email :">Email*</label>
                    <input type="text" id="EmailId" name="Email" required>
                </div>
                <div class="notification">
                    <label id="notificationId"></label>
                </div>
                <div class="button-container">
                    <input type="button" value="Sign Up" OnClick="CheckTextField()">
                </div>
            </div>
        </form>
    </div>

</body>
</html>

